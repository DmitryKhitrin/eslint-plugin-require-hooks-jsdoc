{
  "compilerOptions": {
    "noEmit": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["es2015","es2016"],
    "outDir": "./dist/lib",
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": [
    "./node_modules",
    "./build",
    "./dist"
  ]
}
