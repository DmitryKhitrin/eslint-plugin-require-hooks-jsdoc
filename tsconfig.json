{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "./build",
    "./dist"
  ]
}
